# Configuration for Painel do Clima frontend
adaptabrasil_structure_file: "ab_structure.json" # Path to the structure file **TODO**

# Configuration for AdaptaBrasil API Ingestor
# State code(s) - single: 'PR' or multiple: 'RS, SP, RJ'
state: PR, SC, RS, SP, RJ, MG, ES, BA, SE, AL, PE, PB, RN, CE, PI, MA, TO, PA, AP, AM, RR, RO, AC, MT, MS, GO, DF
# Delay (in seconds) between API requests
delay_seconds: 1
# Output directory for results
output_dir: ../data/
# Save full API responses for debugging
save_full_response: true
# File names for various data sources
mapa_dados_file: "mapa-dados.txt"   # generated by extract_indicator_years_pairs.py
trends_file: "trends-2030-2050.txt" # generated by extract_indicator_years_pairs.py

# LLM Configuration for Narrative Generation
llm:
  # Model provider and name (e.g., "openai/gpt-4o-mini", "anthropic/claude-3-sonnet", "gemini/gemini-1.5-pro")
  model: "openai/gpt-4o-mini"
  # Temperature for creative responses (0.0 to 1.0)
  temperature: 0.3
  # Maximum tokens for response
  max_tokens: 10000
  # API timeout in seconds
  timeout: 30
  # Number of retries for failed requests
  max_retries: 3

# Langfuse Configuration for LLM Observability (OpenTelemetry-based)
observability:
  # Enable Langfuse logging
  enabled: false
  # Langfuse host URL (use your self-hosted instance)
  host: "http://localhost:3000"
  # Langfuse project name
  project_name: "Painel do clima"
  # Environment tag for traces
  environment: "development"

# API Keys (REPLACE WITH YOUR ACTUAL KEYS)
# Get your OpenAI API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY: "your-openai-api-key-here"

# Langfuse Configuration (optional - for LLM observability)
# Get your Langfuse keys from your Langfuse instance
LANGFUSE_SECRET_KEY: "your-langfuse-secret-key-here"
LANGFUSE_PUBLIC_KEY: "your-langfuse-public-key-here"
LANGFUSE_HOST: "http://localhost:3000"

# API Security Configuration
api_security:
  # Enable/disable API authentication
  enabled: true
  # API keys for different clients (CHANGE THESE TO SECURE VALUES)
  keys:
    master: "your-master-api-key-here"
    frontend: "your-frontend-api-key-here"
    llm: "your-llm-api-key-here"
    admin: "your-admin-api-key-here"
  # Endpoints that don't require authentication
  public_endpoints:
    - "/health"
    - "/docs" 
    - "/redoc"
    - "/openapi.json"
